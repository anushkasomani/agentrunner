{ 
  "extends": "../../tsconfig.base.json", 
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "module": "CommonJS",
    "noEmit": true,
    "paths": {
      "@agentrunner/common": ["../../packages/common/src"],
      "@agentrunner/common/*": ["../../packages/common/src/*"],
      "@agentrunner/skills": ["../../packages/skills/src"],
      "@agentrunner/skills/*": ["../../packages/skills/src/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
